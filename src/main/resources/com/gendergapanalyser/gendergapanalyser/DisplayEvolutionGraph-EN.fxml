<AnchorPane id="main" prefHeight="790.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gendergapanalyser.gendergapanalyser.DisplayEvolutionGraph">
   <children>
      <AnchorPane fx:id="titleBar">
         <children>
            <Rectangle id="top-bar" arcHeight="5.0" arcWidth="5.0" fill="#0000001a" height="100.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" width="1300.0" />
            <Text id="title" layoutX="14.0" layoutY="43.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="labels" text="Here are the evolution graphs for men's and women's wages, and for the wage gap.">
               <font>
                  <Font name="Calibri" size="20.0" />
               </font>
            </Text>
            <Hyperlink layoutX="14.0" layoutY="50.0" onAction="#backToMainMenu" style="-fx-padding: 0;" text="⬅ Back to main menu">
               <font>
                  <Font name="Calibri" size="20.0" />
               </font>
            </Hyperlink>
            <ChoiceBox fx:id="languagePicker" layoutX="906.0" layoutY="37.0" prefWidth="150.0" styleClass="promptButtons" />
            <Button id="lightModeButton" layoutX="1074.0" layoutY="25.0" mnemonicParsing="false" onAction="#toggleDisplayMode" prefHeight="50.0" prefWidth="50.0" style="-fx-padding: 0;" text="☀" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
            <Button id="darkModeButton" layoutX="1124.0" layoutY="25.0" mnemonicParsing="false" onAction="#toggleDisplayMode" prefHeight="50.0" prefWidth="50.0" style="-fx-padding: 0;" text="🌙">
               <font>
                  <Font size="30.0" />
               </font>
            </Button>
            <Button id="minimizeButton" layoutX="1186.0" layoutY="25.0" mnemonicParsing="false" onAction="#minimizeWindow" prefHeight="50.0" prefWidth="50.0" text="—">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
            <Button layoutX="1236.0" layoutY="25.0" mnemonicParsing="false" onAction="#exitApp" prefHeight="50.0" prefWidth="50.0" styleClass="redButtons" text="❌" textFill="RED">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
      <Text layoutX="924.0" layoutY="126.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="labels" text="Statistics">
         <font>
            <Font name="Calibri" size="20.0" />
         </font>
      </Text>
      <Text layoutX="1142.0" layoutY="126.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="labels" text="Yearly pay gaps">
         <font>
            <Font name="Calibri" size="20.0" />
         </font>
      </Text>
      <ImageView fx:id="chartImageView" fitHeight="562.0" fitWidth="800.0" layoutX="20.0" layoutY="137.0" pickOnBounds="true" preserveRatio="true" />
      <VBox fx:id="salariesView" layoutX="835.0" layoutY="137.0" prefHeight="600.0" prefWidth="250.0" />
      <VBox fx:id="payGapsView" layoutX="1130.0" layoutY="137.0" prefHeight="600.0" prefWidth="150.0" />
      <Text layoutX="14.0" layoutY="726.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="labels" text="Select range to be included in the graph: ">
         <font>
            <Font name="Calibri" size="20.0" />
         </font>
      </Text>
      <TextField fx:id="minimumRangeInput" layoutX="354.0" layoutY="707.0" prefHeight="25.0" prefWidth="50.0" styleClass="inputs">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
      </TextField>
      <RangeSlider fx:id="rangeSlider" layoutX="414.0" layoutY="714.0" />
      <TextField fx:id="maximumRangeInput" layoutX="565.0" layoutY="707.0" prefHeight="25.0" prefWidth="50.0" styleClass="inputs">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
      </TextField>
      <Button fx:id="processRange" layoutX="637.0" layoutY="707.0" mnemonicParsing="false" styleClass="promptButtons" text="See graph for this range">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
      </Button>
      <Text layoutX="14.0" layoutY="769.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="labels" text="Choose which evolution to display: ">
         <font>
            <Font name="Calibri" size="20.0" />
         </font>
      </Text>
      <ChoiceBox fx:id="changeGraph" layoutX="302.0" layoutY="751.0" prefHeight="25.0" prefWidth="170.0" styleClass="promptButtons">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></ChoiceBox>
      <ToggleButton fx:id="showPayGapToggle" layoutX="484.0" layoutY="751.0" mnemonicParsing="false" onAction="#togglePayGap" styleClass="toggles" text="Exclude pay gap">
         <font>
            <Font name="Calibri" size="15.0" />
         </font>
      </ToggleButton>
      <HBox fx:id="predictionControls" alignment="CENTER" layoutX="722.0" layoutY="751.0" prefHeight="28.0" prefWidth="324.0" style="-fx-spacing: 15;">
         <children>
            <ToggleButton fx:id="includePredictionsToggle" mnemonicParsing="false" onAction="#togglePredictions" styleClass="toggles" text="Exclude predictions">
               <font>
                  <Font name="Calibri" size="15.0" />
               </font>
            </ToggleButton>
            <Button mnemonicParsing="false" onAction="#discardPredictions" styleClass="promptButtons" text="🚮 Discard predictions">
               <font>
                  <Font name="Calibri" size="15.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
      <Hyperlink layoutX="1102.0" layoutY="752.0" onAction="#goToAnalysisPage" style="-fx-padding: 0;" text="Go to analysis page ➡">
         <font>
            <Font name="Calibri" size="20.0" />
         </font>
      </Hyperlink>
   </children>
</AnchorPane>
